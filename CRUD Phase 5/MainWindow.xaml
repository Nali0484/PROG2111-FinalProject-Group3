<Window x:Class="CRUD_Phase_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD_Phase_5"
        mc:Ignorable="d"
        Title="BookBuster" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Content="Create" Width="100" Margin="5" Click="BtnCreateBook_Click"/>
            <Button Content="Read" Width="100" Margin="5" Click="BtnReadBook_Click"/>
            <Button Content="Update" Width="100" Margin="5" Click="BtnUpdateBook_Click"/>
            <Button Content="Delete" Width="100" Margin="5" Click="BtnDeleteBook_Click"/>
        </StackPanel>

        <Grid Margin="20">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="BookID:" Margin="5"/>
            <TextBox x:Name="txtBookID"
                     Grid.Row="0"
                     Grid.Column="1"
                     Width="200"
                     Margin="5"/>
            <Label Grid.Row="0" Grid.Column="3" Content="Rental Status:" Margin="4"/>
            <ComboBox x:Name="bookStatus"
             Grid.Row ="0"
             Grid.Column="4"
             Width="200"
             Margin="5">
             <ComboBoxItem Content="Available"/>
                <ComboBoxItem Content="Rented"/>
            </ComboBox>

            <Label Grid.Row="1" Grid.Column="0" Content="Title" Margin="5"/>
            <TextBox x:Name="txtTitle"
                     Grid.Row="1"
                     Grid.Column="1"
                     Width="200"
                     Margin="5"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Author:" Margin="5"/>
            <TextBox x:Name="txtAuthor"
                     Grid.Row="2"
                     Grid.Column="1"
                     Width="200"
                     Margin="5"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Publishing Year:" Margin="5"/>
            <TextBox x:Name="txtYear"
                     Grid.Row="3"
                     Grid.Column="1"
                     Width="200"
                     Margin="5"/>
            
            <Label Grid.Row="4" Grid.Column="0" Content="Language:" Margin="5"/>
            <TextBox x:Name="txtLanguage"
                     Grid.Row="4"
                     Grid.Column="1"
                     Width="200"
                     Margin="5"/>
            
            <DataGrid x:Name="dataGridBooks"
                      Grid.Row="5"
                      Grid.ColumnSpan="5"
                      Margin="10"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      FontSize="13"/>
        </Grid>
    </DockPanel>
</Window>
